<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main3"
    tools:context="com.example.gadda_000.newproj.Main3Activity">


    <TextView
        android:id="@+id/areainp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text=""/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/sno123"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="italic"
        android:text="sno"/>

    <TextView
        android:id="@+id/busno123"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"

        android:textSize="15dp"
        android:textStyle="italic"
        android:text="Busno"/>



    <TextView
        android:id="@+id/landmark123"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
android:layout_marginLeft="10dp"

        android:textSize="15dp"
        android:textStyle="italic"
        android:gravity="center"
        android:text="Landmark"/>

    <TextView
        android:id="@+id/tim123"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"

        android:textSize="15dp"
        android:textStyle="italic"
        android:text="time"/>

</LinearLayout>
    </ScrollView>
</LinearLayout>
